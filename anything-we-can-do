:: StoryScript [script]
const deepLinkQueryParam = 'passage'

function deepLinkToPassage() {
  // Check to see if there's a deep link reference when starting the
  // story. If so, navigate straight there instead of starting at
  // the beginning of the story
  if (window.location.search) {
    const queryParams = new URLSearchParams(window.location.search)
    const deepLinkedPassageName = queryParams.get(deepLinkQueryParam)
    if (deepLinkedPassageName) {
      const deepLinkedPassage = window.story.passages.find((passage) => passage?.name === deepLinkedPassageName)
      if (deepLinkedPassage) {
        window.story.startPassage = deepLinkedPassage.id
      } else {
      window.alert(`No passage available with the name ${deepLinkedPassageName}; please check the URL and try again`);
      }
    }
  }
}

$(window).on('sm.story.started', function (e, data)
{  
  // Load external CSS
  $('<link/>', {
   rel: 'stylesheet',
   type: 'text/css',
   href: 'https://fonts.googleapis.com/css2?family=Merriweather'
}).appendTo('head');
    $('<link/>', {
   rel: 'stylesheet',
   type: 'text/css',
   href: 'https://fonts.googleapis.com/css2?family=Lato'
}).appendTo('head');
  
  deepLinkToPassage()
  
  // Load external confetti script
  $.getScript("https://cdn.jsdelivr.net/npm/canvas-confetti@1.2.0/dist/confetti.browser.min.js")
    .done(() => {
  	console.log("successfully loaded confetti library")
  })
    .fail(() => {
  	console.log("failed to load confetti library")
  });
})
  

$(window).on('sm.passage.showing', function (e, data)
{
  // add passage to the story history when it is viewed, so that the
  // back button works correctly
  window.story.checkpoint(data.passage.name);
  
  // Make sure the current passage name is included in the URL as a
  // query param (for deep linking)
  const currentUrl = new URL(window.location.href);
  currentUrl.searchParams.set(deepLinkQueryParam, data.passage.name);
  window.history.replaceState(window.history.state, '', currentUrl.toString());
});

$(window).on('sm.passage.shown', function (e, data)
{
  
  // Fix any incorrectly-parsed first paragraphs (i.e. move <p> tag to front of sentence, instead of having an empty tag).
  const passageEl = $(e.target)
  let passageHTML = passageEl.html()
  if (passageHTML.includes('<p></p>')) {
    passageHTML = `<p>${passageHTML.replace('<p></p>','</p>')}`
  }
  passageEl.html(passageHTML)
  
  // Insert menu/title
  passageEl.prepend('<div id="menu"><h1 id="title">Anything we can do, we can afford</h1><a href="javascript:void(0)" id="mmt-explainer" data-passage="Modern Monetary Theory Side Quest"><img src="./icons/chat-bubble-question.svg" /></a></div>');
  
  // Wrap passage paragraphs in a container
  passageEl.find('p').wrapAll('<div id="passage-container" />')
  
  // Transform <sup> elements into footnote links
  if (window.story.state.footnotes) {
    const passageContainer = $('#passage-container')
    passageContainer.prepend('<div id="footnote-container"><div id="footnote-content"/><button id="close-footnote">üÖá</button></div>')
  	passageContainer.find('p').wrapAll('<div id="passages" />')
    $('#close-footnote').on("click", function() {
      $('#footnote-container').css("display", "none");
    })
    const footnotes = passageContainer.find('sup')
    footnotes.each((i, footnote) => {
      $(footnote).wrap(`<a href="javascript:void(0)" class="footnote" data-footnote=${i}></a>`)
    })
    $(".footnote").on( "click", function() {
      const footnoteIndex = this.getAttribute("data-footnote")
      const footnoteContent = window.story.state.footnotes[footnoteIndex]
      if (footnoteContent.href) {
      	$('#footnote-content').html(`<a href=${footnoteContent.href}  target="_blank">${footnoteContent.text}</a>`)
      } else {
      	$('#footnote-content').text(footnoteContent.text)
      }
      $('#footnote-container').css("display", "block");
    });
  }
    
  // Add special action to MMT button link
  if (data.passage.name === "Modern Monetary Theory Side Quest") {
  	$('#passage-container').addClass('mmt-explainer')
    $('a[data-passage]').on('click', function() {
    	$('#passage-container').removeClass('mmt-explainer')
    })
  }
  
  // Make navigation links look and work like buttons
  const links = passageEl.find('a[data-passage]:not(#mmt-explainer)')
  links.each((_, link) => {
    link.innerText = ''
  	$('<button>', {
      text: link.getAttribute('data-passage'),
      class: 'navigation-button',
    }).appendTo(link);
  })
  
  // TODO: Put carousel around the passage
  // TODO: only do this on mobile
  
  // If this passage was the non-traditional answer, shoot confetti
  if (data.passage.tags.includes('correct-answer')) {
    function randomInRange(min, max) {
      return Math.random() * (max - min) + min;
    }
    let count = 3
    function fireConfetti() {
      if (count > 0) {
        try {
          confetti({
            angle: randomInRange(55, 125),
            spread: randomInRange(50, 70),
            particleCount: randomInRange(50, 100),
            origin: { y: 0.6 }
          });
          count--
          setTimeout(fireConfetti, 1000)
        } catch {
          console.log("confetti function not yet loaded")
          setTimeout(fireConfetti, 1000)
        }
      }
    }
    fireConfetti()
  }
});

$(window).on('sm.passage.hidden', function (e, data)
{
	window.story.state.footnotes = null
});

